package assignment3;
import java.util.Scanner;
public class calculator {
	

	   
	static Scanner dev = new Scanner(System.in);

	    public void ADD() {
	        System.out.println(" enter the first number ");
	        int num1 = dev.nextInt();
	        System.out.println(" enter the second number ");
	        int num2 = dev.nextInt();

	        int total = num1 + num2;

	        System.out.println(" Total number is " + total);

	    }

	    public void SUB() {
	        System.out.println(" enter the first number ");
	        int num1 = dev.nextInt();
	        System.out.println(" enter the second number ");
	        int num2 = dev.nextInt();

	        int total = num1 - num2;

	        System.out.println(" Total number is " + total);

	    }

	    public void MUL() {
	        System.out.println(" enter the first number ");
	        int num1 = dev.nextInt();
	        System.out.println(" enter the second number ");
	        int num2 = dev.nextInt();

	        int total = num1 * num2;

	        System.out.println(" Total number is " + total);

	    }

	    public static void main(String[] args) {

	        vena ar = new vena();

	        while (true) {

	            System.out.println("          1) ADD ");
	            System.out.println("          2) SUB ");
	            System.out.println("          3) MUL ");
	            System.out.println("          4) EXIT ");

	            System.out.println(" enter the choice ");
	            int choice = dev.nextInt();

	            switch (choice) {
	                case 1:
	                    ar.ADD();
	                    break;
	                case 2:
	                    ar.SUB();
	                    break;
	                case 3:
	                    ar.MUL();
	                    break;
	                case 4:
	                    System.out.println(" Thans for using our application");
	                    System.exit(0);

	                default:
	                    System.out.println(" enter only 1 to 4 only ");

	            }

	        }

	    }
	}