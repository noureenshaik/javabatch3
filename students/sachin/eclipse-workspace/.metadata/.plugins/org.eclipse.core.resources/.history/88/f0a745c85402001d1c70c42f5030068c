
public class PizzaSolution {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		System.out.println("Price for 1 pizza is $300");
		
		int a = 20;
		
		
		System.out.println("They buy 2 pizzas and get a 20% discount");
		
		double price = (a * 2) - (a * 2 * .02);
		
		System.out.println("Total price after buying 2 pizzas: " + price);
		
	}

}
